{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "NamBlog.API.Application.Services.ArticleQueryService": "Information",
      "NamBlog.API.Application.Services.ArticleCommandService": "Information",
      "NamBlog.API.Application.Services.AuthService": "Information",
      "NamBlog.API.EntryPoint.MCP": "Information",
      "NamBlog.API.Infrastructure.Services.FileWatcherService": "Information",
      "NamBlog.API.Infrastructure.Agents.OpenAIService": "Information"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss ",
        "UseUtcTimestamp": false,
        "ColorBehavior": "Enabled"
      }
    }
  }
}
